<%= simple_form_for(@event_attendance) do |f| %>
  <%= f.error_notification %>

  <div id="error-explanation">
    <ul>
      <% @event_attendance.errors.full_messages.each do |error| %>
        <li class="notification"><%= error %></li>
      <% end %>
    </ul>
  </div>

  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <div class="control">
        <%= f.input :attended_event_id,
                    autofocus: true,
                    collection: Event.all,
                    label_method: :description,
                    value_method: :id,
                    label: 'Event',
                    input_html: { class: 'input' },
                    wrapper:  false,
                    label_html: { class: 'label' }
        %>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label is-medium">
      <div class="control">
        <%= f.input :event_attendee_id,
                    collection: User.where.not(id: current_user.id),
                    label_method: :name,
                    value_method: :id,
                    label: 'User',
                    input_html: { class: 'input' },
                    wrapper:  false,
                    label_html: { class: 'label' }
        %>
      </div>
    </div>
  </div>

  <%#= form_for(@event_attendance) do |f| %>
  <!--<div class="row">
    <%#= f.label :attended_event_id %>
    <%#= f.collection_select :attended_event_id, Event.all, :id, :description, prompt: true %>
  </div>

  <div class="row">
    <%#= f.label :event_attendee_id %>
    <%#= f.collection_select :event_attendee_id, User.where.not(id: current_user.id), :id, :name, prompt: true %>
  </div>-->

  <div class="field">
    <div class="control">
      <%= f.button :submit, 'Attend', class: "button is-info is-normal" %>
    </div>
  </div>
<% end %>