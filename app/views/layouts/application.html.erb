<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="notification is-primary global-notification">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="notification is-danger global-notification">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>

    <nav class="navbar my-link">
      <div class="navbar-brand">
      <%= link_to root_path, class: "navbar-item" do %>
        <h1 class="title is-5">Eventte</h1>
      <% end %>
        <div class="navbar-burger burger" data-target="navbarExample">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>

      <div id="navbarExample" class="navbar-menu">
        <div class="navbar-end">
          <div class="field is-grouped">
            <% if logged_in? %>
              <p class="control df ai-c">
                <%= link_to 'New Event', '#', class: 'button is-info is-inverted' %>
              </p>

              <p class="control df ai-c">
                <%= link_to 'Logout', logout_path, method: :delete, class: "button is-info" %>
              </p>
            <% else %>
              <p class="control df ai-c"><%= link_to 'Sign In', login_path, class: "button is-imo white" %></p>
              <p class="control df ai-c"><%= link_to 'Sign Up', new_user_path, class: "button is-imo white" %></p>
            <% end %>
          </div>
        </div>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
