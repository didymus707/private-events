<p id="notice"><%= notice %></p>

<div class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-half">
        <h1 class="title is-size-1">My Events</h1>
          <div class="box bg-c">
            <article class="media">
              <div class="media-content">
                <div class="content">
                <% if !current_user %>
                  <h4>Host</h4>
                  <p class="has-text-left"><strong><%= @event.host.name %></strong></p>
                <% end %>
                  <h5>Event Description</h5>
                  <p><%= @event.description %></p><br />
                  <div class="columns">
                    <div class="column is-half">
                      <h6 class="has-text-left">Date</h6>
                      <small><%= @event.date %></small>
                    </div>
                    <div class="column is-half">
                      <h6 class="has-text-right">Location</h6>
                      <p class="has-text-right"><%= @event.location %></p>
                    </div>
                  </div>
                </div>
              </div>
            </article>
          </div>

         <%= simple_form_for(@users) do |f| %>
          

          <div class="row">
            <%= f.label :user_id %>
            <%= f.collection_select :user_id, User.all, :id, :name, prompt: true %>
          </div>

          <%= f.submit %>
         <% end %>


          <div class="panel gw">
            <p class="panel-heading">Attendees</p>
            
            <ul class="panel-block">
              <li>Joe Blow</li>
            </ul>
