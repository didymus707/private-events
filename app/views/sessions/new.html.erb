<div class="section">
  <div class="container">
    <div class="columns is-centered">

      <div class="column is-4">

        <h2 class="title is-2">Log in</h2>

        <%= simple_form_for(:sessions, url: login_path) do |f| %>

          <div class="field">
            <div class="control">
              <%= f.input :name,
                          required: false,
                          autofocus: true,
                          input_html: { class: 'input' },
                          wrapper: false,
                          label_html: { class: 'label' }
              %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.button :submit, "Log in", class: "button is-info is-medium" %>
            </div>
          </div>
          
        <% end %>

        <p class="mt">New user ? <%= link_to "Sign up now!", new_user_path %></p>
      </div>
    </div>
  </div>
</div>